---
import LightDarkMode from '../components/lightdarkmode.jsx';

const navLinks = [
    {
        title: 'Home',
        url: '/',
    },{
        title: 'Buttons',
        url: '/buttons',
    },{
        title: 'Cards',
        url: '/cards',
    },{
        title: 'Sliders',
        url: '/sliders',
    }
]
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>Components</title>
    </head>
    <body>
        <header class="fixed h-svh w-[350px] bg-white border-r-2 shadow-md top-0 left-0 flex flex-col p-4 gap-4 text-black">
            <LightDarkMode client:load/>
            <h1 class="text-3xl font-semibold underline text-center my-4">Components</h1>
                {navLinks.map((item, index) => {
                    return(
                        <a 
                            class={`
                               text-xl py-2 transition-all px-4
                               hover:bg-blue-500 hover:text-white hover:px-6
                               ${Astro.url.pathname === item.url ? 'bg-blue-500 text-white' : ''}
                                `}
                            href={item.url}>
                            {item.title}
                        </a>
                    )
                })}
        </header>
        <main class="ml-[350px] p-4">
            <slot />
        </main>
        <p>hola</p>
    </body>
</html>

<style>
    body {
        background-color: #111128;
        color: white;
    }
</style>